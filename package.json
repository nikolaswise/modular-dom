{
  "name": "modular-dom",
  "version": "0.0.1",
  "description": "CSS and SASS modular mini framework for creating design systems",
  "main": "index.js",
  "scripts": {
    "build": "node-sass scss/modular-dom.scss css/modular-dom.css",
    "postbuild": "postcss css/modular-dom.css --use autoprefixer -d css/",
    "minify": "postcss css/modular-dom.css --use cssnano -o css/modular-dom.min.css",
    "stats": "cssstats css/modular-dom.css  ./css-stats.json",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikolaswise/modular-dom.git"
  },
  "keywords": [],
  "author": "Nikolas Wise",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolaswise/modular-dom/issues"
  },
  "homepage": "https://github.com/nikolaswise/modular-dom#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.0",
    "cssnano": "^3.10.0",
    "cssstats-cli": "^1.0.0-beta.2",
    "node-sass": "^4.5.2",
    "postcss-cli": "^4.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sass-lint": "^1.10.2"
  }
}
